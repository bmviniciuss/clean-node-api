{
  "name": "clean-node-api",
  "version": "1.1.0",
  "main": "index.js",
  "repository": "https://github.com/bmviniciuss/clean-node-api",
  "author": "Vinicius Barbosa de Medeiros",
  "license": "MIT",
  "description": "NodeJs Rest API using TDD, Clean Architecture and TypeScript",
  "scripts": {
    "start": "node dist/main/server.js",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "dev": "sucrase-node src/main/server.ts",
    "lint": "eslint 'src/**' --quiet",
    "lint:fix": "eslint 'src/**' --quiet --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand --watch",
    "test:unit": "yarn test --watch -c ./jest-unit.config.js",
    "test:integration": "yarn test --watch -c ./jest-integration.config.js",
    "test:staged": "yarn test --findRelatedTests",
    "test:ci": "yarn test --coverage"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.20",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^2.4.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sucrase": "^3.15.0",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0"
  },
  "dependencies": {
    "@types/node": "^14.0.5",
    "bcrypt": "^4.0.1",
    "express": "^4.17.1",
    "fast-glob": "^3.2.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.8",
    "typescript": "~3.8.0",
    "validator": "^13.0.0"
  },
  "engines": {
    "node": "12.x"
  }
}
