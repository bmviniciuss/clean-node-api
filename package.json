{
  "name": "clean-node-api",
  "version": "1.2.3",
  "main": "index.js",
  "repository": "https://github.com/bmviniciuss/clean-node-api",
  "author": "Vinicius Barbosa de Medeiros",
  "license": "MIT",
  "description": "NodeJs Rest API using TDD, Clean Architecture and TypeScript",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/main/server.ts",
    "lint": "eslint 'src/**' --quiet",
    "lint:fix": "eslint 'src/**' --quiet --fix",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand --watch",
    "test:unit": "npm run test --watch -c ./jest-unit.config.js",
    "test:integration": "npm run test --watch -c ./jest-integration.config.js",
    "test:staged": "npm run test --findRelatedTests",
    "test:ci": "npm run test --coverage"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.5",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.20",
    "@types/node": "^14.14.16",
    "@types/supertest": "^2.0.9",
    "@types/validator": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "git-commit-msg-linter": "^2.4.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.6",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^3.5.8",
    "validator": "^13.0.0"
  },
  "engines": {
    "node": "12.x"
  }
}
